<div class='container px-5 px-sm-0' >
  <div class='row'>
    <% if user_signed_in? %>
    <div class='side-bar col-md-3 mt-5'>
      <!--ジャンル検索-->
      <%= render "public/users/info", user: current_user %>
      <div class="accordion" id="accordionExample">
        <%= render "admin/genres/genre_search", genres: @genres %>
      </div>
      <!--投稿フォーム-->
      <%= render 'public/infos/new', info: @info %>
    </div>

    <div class='col-md-8 offset-md-1 mt-4'>
        <% if @model == 'user' %>
          <h3 class="my-3">ユーザー検索 "<%= @content %>"</h3>
          <%= render 'public/users/index', users: @records %>
        <% elsif @model == 'info' %>
        	<h3 class="my-3">情報検索 "<%= @content %>"</h3>
          <%= render 'public/infos/index', infos: @records %>
        <% elsif @model == 'group' %>
        	<h3 class="my-3">グループ検索 "<%= @content %>"</h3>
          <%= render 'public/groups/index', groups: @records %>
        <% end %>
      <% end %>
      </div>

      <% if admin_signed_in? %>
      <div class='offset-md-1 col-md-10 offset-md-1 mt-4'>
        <% if @model == 'user' %>
        	<h3 class="my-3">ユーザー検索 "<%= @content %>"</h3>
          <%= render 'admin/users/index', users: @records %>
        <% elsif @model == 'info' %>
        	<h3 class="my-3">情報検索 "<%= @content %>"</h3>
          <%= render 'admin/infos/index', infos: @records %>
        <% elsif @model == 'group' %>
        	<h3 class="my-3">グループ検索 "<%= @content %>"</h3>
          <%= render 'admin/groups/index', groups: @records %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
