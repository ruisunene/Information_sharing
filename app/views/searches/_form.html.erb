<!--ユーザーログインの場合はこちらを表示-->
<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select({ "情報" => "info", "ユーザー" => "user", "グループ" => "group" }) %>
    <%= f.select :method, options_for_select({ "部分一致" => "partial", "完全一致" => "perfect"}) %>
    <%= f.submit '検索' %>
  <% end %>
<% end %>
<!--管理者ログインの場合はこちらを表示-->
<% if admin_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select({ "ユーザー" => "user", "情報" => "info", "グループ" => "group" }) %>
    <%= f.select :method, options_for_select({  "部分一致" => "partial", "完全一致" => "perfect" }) %>
    <%= f.submit '検索' %>
  <% end %>
<% end %>
