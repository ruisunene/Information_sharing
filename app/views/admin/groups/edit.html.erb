<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>グループ編集</h3>
      <%= form_with model: @group, url: admin_group_path(@group.id), local: true, method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: 'form-control  pb-3' %>
      </div>

      <div class="form-group">
        <%= f.submit :作成する, class: 'btn btn-info' %>
      </div>
      <% end %>
    </div>
  </div>
</div>