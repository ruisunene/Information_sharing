<!--管理者用、コメントの編集ページ-->
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>コメント編集</h2>
      <%= form_with model: [@info, @comment], url: admin_info_info_comment_path(@info.id, @comment.id)  do |f| %>
      <%= render 'layouts/errors', obj: @comment %>
        <div class="form-group">
          <%= f.text_field :comment, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: 'btn btn-success col-sm-4'%>
        </div>
        <div class="form-group">
          <%= link_to '元のページへ', admin_info_path(@info), class: 'btn btn-primary col-sm-4'%>
        </div>
      <% end %>
    </div>
  </div>
</div>