<!--管理者用、コメント一覧部分テンプレート-->
<h5 class=" mt-4">コメント一覧</h5>
<table class="table table-bordere">
  <tbody>
  <% info.info_comments.each do |info_comment| %>
    <tr>
      <td width="20%">
        <%= link_to admin_user_path(info_comment.user) do %>
          <%= info_comment.user.name %>
        <% end %>
      </td>
      <td  width="50%">
        <%= Rinku.auto_link(info_comment.comment, :all, 'target="_blank"').gsub("\r\n", "<br>").html_safe %></td>
      <td width="15%">
        <%= link_to "編集", edit_admin_info_info_comment_path(info, info_comment), class: "btn btn-success pull-right"%>
      </td>
      <td width="15%">
        <%= link_to "削除", admin_info_info_comment_path(info, info_comment), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger pull-right", remote: true %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>