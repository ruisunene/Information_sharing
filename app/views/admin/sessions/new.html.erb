<!--管理者用ログイン-->
<div class= "container">
  <h2 class= "mt-4 text-center font-weight-bold">管理者ログイン</h2>
  <div class="text-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class=class="form-group mt-3">
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'col-sm-3 ml-3'%>
    </div>

    <div class=class="form-group mt-3">
      <%= f.label "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:'col-sm-2 ml-3' %>
    </div>

    <div class="actions mt-2 mb-5 text-center">
      <%= f.submit "ログインする", class: 'btn btn-success' %>
    </div>
  <% end %>

    <div class="text-center mt-5">
      <h5>ログインには下記のメールアドレスとパスワードを入力してください</h5>
      <div class="my-3">
        <p>管理者用メールアドレス</p>
        <p>admin@admin</p>
      </div>
      <div  class="m-5">
        <p>管理者用パスワード</p>
        <p>ruisunene</p>
      </div>
    </div>
  </div>
</div>
