<!--管理者用、ユーザー情報の詳細-->
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='offset-md-1 col-md-10 offset-md-1 mt-4'>
      <table class='table table-borderless'>
        <tr>
          <th><h3><%= @user.name %>さんの共有情報</h3></th>
          <th class= "w-30">
            <%= link_to 'ユーザー情報編集', edit_admin_user_path(@user), class: 'btn btn-success px-3'  %>
          </th>
        </tr>
      </table>

      <table class='table table-bordered border border-dark'>
        <thead class="text-white bg-dark">
          <tr>
            <th width="25%">投稿日時</th>
            <th width="40%">タイトル</th>
            <th width="20%">ジャンル</th>
            <th width="15%">コメント</th>
          </tr>
        </thead>
        <tbody>
        <% @infos.reverse_each do |info| %>
          <tr>
            <td><u><%= info.created_at.strftime('%Y/%m/%d　%H:%M') %><u></td>
            <td><%= link_to info.title,admin_info_path(info.id) %></td>
            <td><%= info.genre.name %></td>
            <td><%= render "public/info_comments/counter", info: info %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

