<div class= "container">
  <h2 class= "mt-4 text-center font-weight-bold">ログイン</h2>
  <div class="text-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="form-group mt-3">
      <%= f.label "メールアドレス" %></br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'col-sm-3 ml-3' %>
    </div>

    <div class="form-group mt-3" >
      <%= f.label "パスワード" %></br>
      <%= f.password_field :password, autocomplete: "current-password", class:'col-sm-2 ml-3'%>
    </div>

    <div class="actions mt-2 text-center">
      <%= f.submit "ログインする", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>

  <div class="my-5 text-center">
    <h5><%= render "public/shared/links" %></h5>
  </div>
</div>
