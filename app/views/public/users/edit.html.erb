<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>ユーザ編集</h2>
    <%= form_with model:@user, local:true do |f| %>
      <%#= render 'layouts/errors', obj: @user %>
      <div class="form-group">
        <%= f.label :"氏名" %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :"役職" %>
        <%= f.text_field :job, class: "form-control job" %>
      </div>
      <div class="form-group">
        <%= f.label :"電話番号" %>
        <%= f.text_field :phone_number, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit :"編集する", class: 'btn btn-secondary' %>
      </div>
    <% end %>
    </div>
  </div>
</div>