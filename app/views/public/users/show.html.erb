<!--ユーザーの詳細-->
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <!--サイドバー-->
    <div class='side-bar col-md-3 mt-5'>
      <%= render 'sidebar', info: @info, user: @user, genres: @genres, bookmarks: @bookmarks %>
    </div>
    <!--投稿の一覧-->
    <div class='col-md-8 offset-md-1 mt-4'>
      <h3 class="mb-3">投稿一覧</h3>
      <table class='table table-bordered border border-dark'>
        <thead class="text-white bg-dark">
          <tr>
            <th width="25%">投稿日時</th>
            <th width="40%">タイトル</th>
            <th width="20%">ジャンル</th>
            <th width="15%">コメント</th>
          </tr>
        </thead>

        <tbody>
        <% @infos.each do |info| %>
          <tr>
            <td><u><%= info.created_at.strftime('%Y/%m/%d　%H:%M') %><u></td>
            <td><%= link_to info.title,info_path(info.id) %></td>
            <td><%= info.genre.name %></td>
            <td><%= render "public/info_comments/counter", info: info %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @infos %>
    </div>
  </div>
</div>

