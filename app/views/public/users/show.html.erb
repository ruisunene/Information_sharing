<!--ユーザーの詳細-->
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <!--サイドバー-->
    <div class='side-bar col-md-3 mt-5'>
      <%= render "public/users/login_user", user: @user %>
      <!--ジャンル検索-->
      <%= render "admin/genres/genre_search", genres: @genres %>
      <!--フォロー・フォロワーボタン-->
      <%= render 'public/relationships/count', user: @user%>
      <!--投稿フォーム-->
      <%= render 'public/infos/form', info: @info_new%>
    </div>
    <!--投稿の一覧-->
    <div class='col-md-8 offset-md-1 mt-4'>
      <table class='table table-borderless'>
        <tr>
          <td><h3><%= @user.name %>さんの共有情報</h3></td>
          <td class= "w-30">
            <% if @user == current_user %><!--ログインユーザーの詳細ページのみ編集ボタンを表示-->
              <%= link_to 'ユーザー情報編集', edit_user_path(@user), class: 'btn btn-success px-3' %>
            <% end %>
          </td>
          <td>
            <% if current_user != @user %>
              <%= link_to 'チャットを開始', user_chat_path(@user.id), class: 'btn btn-success px-3' %>
            <% end %>
          </td>
          <td>
            <% if current_user != @user %>
              <%= render "public/relationships/btn", user: @user %>
            <% end %>
          </td>
        </tr>
      </table>

      <table class='table table-bordered border border-dark'>
        <thead class="text-white bg-dark">
          <tr>
            <th width="25%">投稿日時</th>
            <th width="40%">タイトル</th>
            <th width="20%">ジャンル</th>
            <th width="15%">コメント</th>
          </tr>
        </thead>

        <tbody>
        <% @infos.reverse_each do |info| %>
          <tr>
            <td><u><%= info.created_at.strftime('%Y/%m/%d　%H:%M') %><u></td>
            <td><%= link_to info.title,info_path(info.id) %></td>
            <td><%= info.genre.name %></td>
            <td><%= render "public/info_comments/counter", info: info %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @infos %>

      <div class="bookmarks mt-5"><!--ブックマーク一覧を表示-->
        <%= render "public/bookmarks/index", bookmarks: @bookmarks %>
      </div>
    </div>
  </div>
</div>

