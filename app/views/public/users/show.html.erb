<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <!--ジャンル検索-->
      <div class="genre_search pt-4">
      <%= render "admin/genres/genre_search", genres: @genres %>
      </div>
      <!--ブックマーク-->
      <div class="bookmarks pt-4">
      <%#= render "public/bookmarks/index", bookmarks: @bookmarks %>
      </div>
      <h5 class=" pt-4">新規情報投稿</h5>
      <%= render 'public/infos/form', info: @info%>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2 class=" pt-4"><%= @user.name %>さんの共有情報</h2>
      <div class= " w-25 p-3">
      <% if @user == current_user %>
        <%= link_to 'ユーザー情報編集', edit_user_path(@user), class: "btn btn-secondary btn-block" %>
        <% end %>
        </div>
      <table class='table table-bordered'>
  <thead>
    <tr>
      <th>投稿日時</th>
      <th>情報名</th>
      <th>ジャンル名</th>
      <th>コメント数</th>
    </tr>
  </thead>
  <tbody>
    <% @infos.reverse_each do |info| %>
      <tr>
        <td><u><%= info.created_at.strftime('%Y/%m/%d　%H:%M') %><u></td>
        <td><%= link_to info.title,info_path(info.id) %></td>
        <td><%= info.genre.name %></td>
        <td><%= render "public/info_comments/counter", info: info %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @infos %>

<div class="bookmarks pt-4">
  <h2>ブックマーク一覧</h2>
      <%= render "public/bookmarks/index", bookmarks: @bookmarks %>
      </div>

    </div>
  </div>
</div>

