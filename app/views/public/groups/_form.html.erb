<%= form_with model: group, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, class: 'form-control  pb-3' %>
  </div>

  <div class="form-group">
    <%= f.submit :作成する, class: 'btn btn-info' %>
  </div>
<% end %>