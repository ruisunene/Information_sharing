<h1>Tags#show</h1>
<p>Find me in app/views/tags/show.html.erb</p>

<h2>Actions --></h2>
<%= link_to 'Tags List', info_tags_path %>
<%= link_to 'Delete', info_tag_path(@tag), method: :delete, data: {confirm: '関連づいた記事のタグが空になりますがタグを削除しますか？'} %>

<h2>Tag --></h2>

<%# タグ名 %>
<h3><%= @tag.name %></h3>

<%# タグに関連付く記事一覧 %>
<ul>
  <% @tag.infos.each do |info| %>
    <li>
      <%= link_to info.title, info_path(info) %>
    </li>
  <% end %>
</ul>