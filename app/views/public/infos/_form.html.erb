<!--新規投稿フォーム部分テンプレート-->
<%= form_with model: info, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control pb-5', size: "20x15" %>
  </div>
  <div class="form-group">
    <%= f.label :genre_id, class: 'col-md-6' %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "ジャンルを選択してください"%>
  </div>
  <div class="form-group">
    <%= f.submit :投稿する, class: 'btn btn-success ' %>
  </div>
<% end %>
