<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>新規情報投稿</h2>
      <%= render 'form', info: Info.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>詳細情報</h2>

  		<table class='table'>
  		  <tr>
  		    <td><u><%= @info.created_at.strftime('%Y/%m/%d　%H:%M') %><u></td>
          <td><%= link_to(@info.user) do %>
            <%= @info.user.name %>
            <% end %>
          </td>
          <td><%= link_to @info.title, @info %></td>
          <td><%= @info.genre.name %></td>

          <% if @info.bookmarked_by?(current_user) %>
          <td><%= link_to "ブックマークを外す", info_bookmarks_path(@info), method: :delete %></td>
          <% else %>
          <td><%= link_to "ブックマーク", info_bookmarks_path(@info), method: :post %></td>
          <% end %>
          <td>
            コメント数: <%= @info.info_comments.count %>
          </td>
        <% if @info.user == current_user %>
            <td><%= link_to 'Edit', edit_info_path(@info), class: "btn btn-sm btn-success edit_info_#{@info.id}" %></td>
            <td><%= link_to 'Destroy', @info, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_info_#{@info.id}"%></td>
          <% end %>
        </tr>
        </table>
        <h4>内容</h4>
        <table class='table'>
        <tr>
           <td><%= @info.body %></td>
        </tr>
      </table>
      <div class="memo-index">
        <%= render "public/memos/index", info: @info %>
        <%= render "public/memos/form", info: @info, memo: @memo %>
      </div>
      <div class="info-comments-index">
        <%= render "public/info_comments/index", info: @info %>
        <%= render "public/info_comments/form", info: @info, info_comment: @info_comment %>
      </div>
    </div>
  </div>
</div>