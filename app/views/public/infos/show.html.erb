<!--投稿のの詳細ページ-->
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <div class="genre_search pt-4">
        <%= render "admin/genres/genre_search", genres: @genres %>
      </div>
      <h4 class="pt-4">新規情報投稿</h4>
      <%= render 'form', info: @info_new %>
    </div>

      <div class='col-md-8 offset-md-1'>
    		<h3 class=" pt-4">詳細情報</h3>
    		<table class='table table-bordered'>
    		  <thead class="text-white bg-dark">
            <tr>
              <th>共有日時</th>
              <th>投稿者</th>
              <th>タイトル</th>
              <th>ジャンル</th>
              <th>ブックマーク</th>
              <th>コメント数</th>
            </tr>
          </thead>
          <tbody>
          	<tr>
      		    <td><u><%= @info.created_at.strftime('%Y/%m/%d　%H:%M') %><u></td>
              <td><%= link_to(@info.user) do %>
                <%= @info.user.name %>
                <% end %>
              </td>
              <td><%= link_to @info.title, @info %></td>
              <td><%= @info.genre.name %></td>
              <%= render "public/bookmarks/check", bookmarks: @bookmarks %><!--ブックマークの切り替え-->
              <td class="info-comments-counter"><%= render "public/info_comments/counter", info: @info %></td><!--コメント数の表示-->
            </tr>
          </tbody>
        </table>

        <h4>内容</h4>
        <table class="table">
          <tbody>
            <tr>
              <td class="border border-dark"><%= @info.body %></td>
            </tr>
            <% if @info.user == current_user %><!--ログインユーザーの投稿のみ編集・削除可能-->
            <tr>
              <td>
                <%= link_to '投稿を編集', edit_info_path(@info), class: "btn btn-success" %>
                <%= link_to '投稿を削除', @info, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger"%>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      <!--メモの一覧表示-->
      <div class="memos-index mt-5">
        <%= render "public/memos/index", info: @info %>
      </div>
      <!--メモの投稿フォーム-->
      <div class="memos-form my-3">
        <%= render "public/memos/form", info: @info, memo: @memo %>
      </div>
      <!--コメントの一覧表示-->
      <div class="info-comments-index mt-5">
        <%= render "public/info_comments/index", info: @info %>
      </div>
      <!--コメントの投稿フォーム-->
      <div class="info-comments-form my-3">
        <%= render "public/info_comments/form", info: @info, info_comment: @info_comment %>
      </div>

    </div>
  </div>
</div>
